<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <Button
        android:id="@+id/search_btn_back"
        android:layout_width="80px"
        android:layout_height="80px"
        android:background="@drawable/back_white"/>

    <TextView
        android:id="@+id/search_text_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="SEARCH"
        android:textSize="50px"
        android:textColor="@color/white"/>


    <RelativeLayout
        android:id="@+id/search_layout_search"
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/search_btn_back"
        android:layout_marginTop="30px">

        <EditText
            android:id="@+id/search_edit_search"
            android:layout_width="500px"
            android:layout_height="100px"
            android:background="@null"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="30dp" />

        <Button
            android:id="@+id/search_button_search"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:background="@drawable/search" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/search_edit_search"
            android:background="@color/white" />

    </RelativeLayout>

    <ListView
        android:id="@+id/search_list_res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_layout_search"
        android:layout_marginTop="15dp"></ListView>

</RelativeLayout>

