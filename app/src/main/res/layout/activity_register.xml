<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/register_bg">

    <RelativeLayout
        android:id="@+id/login_view"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="320px">

        <TextView
            android:id="@+id/register_text_account"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="User Name："
            android:textSize="30px"
            android:textColor="@color/Black" />

        <EditText
            android:id="@+id/register_edit_account"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignLeft="@+id/register_text_account"
            android:textColor="@color/Black"
            />

        <TextView
            android:id="@+id/register_text_pwd"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Password："
            android:textSize="30px"
            android:layout_below="@+id/register_edit_account"
            android:textColor="@color/Black" />

        <EditText
            android:id="@+id/register_edit_pwd"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_below="@+id/register_edit_account"
            android:layout_alignLeft="@+id/register_text_pwd"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/register_text_confirmpwd"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Confirm Password："
            android:textSize="30px"
            android:layout_below="@+id/register_edit_pwd"
            android:textColor="@color/Black" />

        <EditText
            android:id="@+id/register_confirm_pwd"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_below="@+id/register_edit_pwd"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/register_text_email"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Email："
            android:textSize="30px"
            android:layout_below="@+id/register_confirm_pwd"
            android:textColor="@color/Black" />

        <EditText
            android:id="@+id/register_edit_email"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_below="@+id/register_confirm_pwd"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/register_text_tel"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Tel："
            android:textSize="30px"
            android:layout_below="@+id/register_edit_email"
            android:textColor="@color/Black"/>

        <EditText
            android:id="@+id/register_edit_tel"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:layout_below="@+id/register_edit_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/Black"/>

        <TextView
            android:id="@+id/register_text_fullname"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Full Name："
            android:textSize="30px"
            android:layout_below="@+id/register_edit_tel"
            android:textColor="@color/Black"/>

        <EditText
            android:id="@+id/register_edit_fullname"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:ems="10"
            android:layout_below="@+id/register_edit_tel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/Black"/>

        <Button
            android:id="@+id/register_btn_submit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/register_edit_fullname"
            android:layout_marginTop="10dp"
            android:background="@color/deepBlue"
            android:onClick="reg_fun"
            android:text="SUBMIT"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </RelativeLayout>

</RelativeLayout>
